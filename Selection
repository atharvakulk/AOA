#include <stdio.h> 
 
void swap(int *xp, int *yp) 
{ 
    int temp = *xp; 
    *xp = *yp; 
    *yp = temp; 
} 
 
void selectionsort(int arr[], int n) 
{ 
    int i, j, min; 
    for (i = 0; i < n - 1; i++) 
    { 
        min = i; 
        for (j = i + 1; j < n; j++) 
        { 
            if (arr[j] < arr[min]) 
                min = j; 
        } 
        if (min != i) 
            swap(&arr[min], &arr[i]); 
    } 
} 
 
int main() 
{ 
    int i, n; 
    printf("Enter the size of the array: "); 
    scanf("%d", &n); 
    int arr[n]; 
    printf("Enter %d elements of the array: ", n); 
    for (i = 0; i < n; i++) 
    { 
        scanf("%d", &arr[i]); 
    } 
selectionsort(arr, n); 
printf("Selection Sort\n"); 
printf("Sorted array: "); 
for (i = 0; i < n; i++) 
{ 
} 
printf("%d ", arr[i]); 
return 0; 
} 
